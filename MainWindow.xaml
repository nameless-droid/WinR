<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinR"
        xmlns:System="clr-namespace:System;assembly=System.Runtime" x:Class="WinR.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
         <!--For large content, better go for a Virtualizing StackPanel--> 
        <ItemsPanelTemplate x:Key="ItemsTemplate">
            <VirtualizingStackPanel/>
        </ItemsPanelTemplate>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" 
                VerticalAlignment="Top"
                Margin="10 10">
            <TextBlock Text="Öffnen: " 
                   Padding="4 3"/>
            <local:FilteredComboBox 
            x:Name="FilteredComboBox1" 
            ItemsPanel="{DynamicResource ItemsTemplate}" 
            Padding="4 3" 
            MinWidth="200"
                KeyDown="FilteredComboBox1_KeyDown"/>
        </StackPanel>
    </Grid>
</Window>
    
